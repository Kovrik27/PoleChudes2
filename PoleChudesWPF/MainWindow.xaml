<Window x:Class="PoleChudesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoleChudesWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Storyboard x:Key="Storyboard1">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="image" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="00:00:01" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="00:00:02" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="00:00:02.1000000" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="image" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="821.6"/>
                <EasingDoubleKeyFrame KeyTime="00:00:01" Value="396"/>
                <EasingDoubleKeyFrame KeyTime="00:00:02" Value="-74.2"/>
                <EasingDoubleKeyFrame KeyTime="00:00:02.1000000" Value="-129.4"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="image" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="304.8"/>
                <EasingDoubleKeyFrame KeyTime="00:00:01" Value="220"/>
                <EasingDoubleKeyFrame KeyTime="00:00:02" Value="333.6"/>
                <EasingDoubleKeyFrame KeyTime="00:00:02.1000000" Value="120"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Canvas>
        <Grid Height="434" Width="790">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Вапрос" HorizontalAlignment="Center" FontSize="40"/>
            <TextBlock Text="{Binding Question}" HorizontalAlignment="Center" Grid.Row="1"/>
            <ListBox VerticalAlignment="Center" HorizontalAlignment="Center" ItemsSource="{Binding Word}" x:Name="bukvi" >
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="15" Name="border">
                            <TextBlock Name="text" Text="{Binding Char}" FontSize="20"/>
                        </Border>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsOpened}" Value="True">
                                <Setter 
                                TargetName="border" 
                                Property="Control.Background"
                                Value="White"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsOpened}" Value="False">
                                <Setter 
                                TargetName="border" 
                                Property="Control.Background"
                                Value="Black"/>
                                <Setter 
                                TargetName="text" 
                                Property="Visibility"
                                Value="Hidden"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="3" HorizontalAlignment="Center" Width="100">
                <TextBlock Text="Буква??!" HorizontalAlignment="Center"/>
                <TextBox Text="{Binding Answer}"/>
                <Button Content="Назвать" Click="MakeTurn"/>
            </StackPanel>
        </Grid>
        <Image x:Name="image"  RenderTransformOrigin="0.5,0.5" Canvas.Left="-57.6" Canvas.Top="-139.2">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Canvas>
</Window>
